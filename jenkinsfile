properties([
  parameters([
    choice(
      name: 'PYTHON',
      description: 'Choose Python version',
      choices: ["python3.9", "python3.11"].join("\n")
    ),
    
  ])
])

pipeline {
    agent any

    stages {
        // stage('Build') {
        //     steps {
        //         echo 'Building..'
        //     }
        // }
        stage('pytest') {
            steps {
                sh "ls"
                withPythonEnv("/usr/local/bin/${params.PYTHON}") {
                    sh """
                    python --version
                    pytest
                    """
                }
            }
        }
        // stage('Deploy') {
        //     steps {
        //         echo 'Deploying....'
        //     }
        // }
    }
}